<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="595.0" prefWidth="847.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Kalpika.EmployeeDetailsController">
    
    <!-- Sector Filter -->
    <TextField fx:id="sectorFilterField" layoutX="116.0" layoutY="183.0" onKeyReleased="#handleFilter" promptText="Enter Sector to Filter" />
    
    <!-- Back Button -->
    <Button fx:id="backButton" defaultButton="true" layoutX="753.0" layoutY="550.0" onAction="#backToDashboard" text="Back " />
    
    <!-- TableView for Employees -->
    <TableView fx:id="employeeTableView" layoutX="12.0" layoutY="237.0" prefHeight="300" prefWidth="828.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="200" text="Name" />
            <TableColumn fx:id="sectorColumn" prefWidth="200" text="Sector" />
            <TableColumn fx:id="joiningDateColumn" prefWidth="200" text="Joining Date" />
        </columns>
    </TableView>
   <Label layoutX="24.0" layoutY="188.0" prefHeight="21.0" prefWidth="116.0" text="Enter Sector" />
   <Label layoutX="236.0" layoutY="14.0" prefHeight="129.0" prefWidth="517.0" text="Employee Details " textFill="#3700ff">
      <font>
         <Font size="49.0" />
      </font>
   </Label>
    
</AnchorPane>
